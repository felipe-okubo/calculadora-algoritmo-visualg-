algoritmo "semnome"
// Função :
// Autor :
// Data : 13/02/2019
// Seção de Declarações 
var
n,n1,n2: real
c: inteiro
q1: caractere
inicio
// Seção de Comando
c<-1
repita

escreval ("----------------------------------")
escreval ("     CALCULADORA DO FELIPE        ")
escreval ("----------------------------------")
ESCREVAL
escreval ("Escolha a operação desejada.")
escreval
escreval ("1 - Adição")
escreval ("2 - Subtração")
escreval ("3 - Multiplicação")
escreval ("4 - Divisão")
leia (n)

se (n=1) entao
            escreval ("----------------------------------")
            ESCREVAL ("             ADIÇÃO               ")
            escreval ("----------------------------------")
fimse

se (n=2) entao
            escreval ("----------------------------------")
            ESCREVAL ("             SUBTRAÇÃO            ")
            escreval ("----------------------------------")
FIMSE

se (n=3) entao
            escreval ("----------------------------------")
            ESCREVAL ("          MULTIPLICAÇÃO           ")
            escreval ("----------------------------------")
FIMSE

se (n=4) entao
            escreval ("----------------------------------")
            ESCREVAL ("             DIVISÃO              ")
            escreval ("----------------------------------")
FIMSE

escreval ("Escolha dois números para calcular.")
leia (n1,n2)
escreval
escreval ("----------------------------------")

se (n=1) entao
   EscrevaL (n1," +",n2, " = ",n1+n2)
   escreval ("----------------------------------")
fimse


se (n=2) entao
   EscrevaL (n1," -",n2, " = ",n1-n2)
   escreval ("----------------------------------")
fimse


se (n=3) entao
   Escreval (n1," x",n2, " = ",n1*n2)
   escreval ("----------------------------------")
fimse


se (n=4) entao
   Escreval (n1," ÷",n2, " = ",n1/n2:5:2)
   escreval ("----------------------------------")
fimse
escreval
escreval
escreval
escreval


Escreval ("Deseja continuar? [S/N]")
LEIA (q1)
limpatela


ate q1="n"
limpatela
escreval
escreval
escreval
escreval ("---------------------------------------------------")
escreval ("|                                                 |")
Escreval ("|  Você finalizou seus cálculos !                 |")
escreval ("|  Obrigado por utilizar a calculadora do Felipe  |")
escreval ("|                                                 |")
escreval ("---------------------------------------------------")
escreval
escreval
escreval
escreval


fimalgoritmo
